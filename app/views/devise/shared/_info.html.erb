<h2>User info</h2>
    <table class="table">
      <%= form_with model: @user,url:'users/' do|f| %>
        <tbody>
          <tr><%= image_tag current_user.get_image(100,100) %></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      <% end %>
    </table>
  <div class="row">
  <%= link_to edit_user_path(current_user),class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: Book,local: true do |f| %>
    <div class="form-group">
      <h6>Title</h6>
      <%= f.text_field :title,class: "form-control title" %>
    </div>
    <div class="form-group">
      <h6>Opinion</h6>
      <%= f.text_area :body,class: "form-control body" %>
    </div>
    <div class="form-group">
      <%= f.submit'Create Book',class: "btn btn-success" %>
    </div>
  <% end %>