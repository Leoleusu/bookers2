<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li class="nav-link text-light">
                  <a class="navbar-brand" href="/"><i class="fas fa-home"></i> Home</a>
                  </li>
                  <% if user_signed_in? %>
                  <li class="nav-link text-light">
                    <a class="navbar-brand" href="/"><i class="fas fa-users"></i> Users</a>
                  </li>
                  <li class="nav-link text-light">
                    <a class="navbar-brand" href="/"><i class="fas fa-book-open"></i> Books</a>
                  </li>
                  <li class="nav-link text-light">
                    <a class="navbar-brand" href="/"><i class="fas fa-sign-out-alt"></i> Log out</a>
                  </li>
                  <% else %>
                  <li class="nav-link text-light">
                    <a class="navbar-brand" href="/homes/about"><i class="fas fa-link"></i> About</a>
                  </li>
                  <li class="nav-link text-light">
                    <a class="navbar-brand" href="/users/sign_up"><i class="fas fa-user-plus"></i> Sign in</a>
                  </li>
                  <li class="nav-link text-light">
                    <a class="navbar-brand" href="/users/sign_in"><i class="fas fa-sign-in-alt"></i> Log in</a>
                  </li>
                  <% end %>
              </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class=container>
        <%= yield %>
      </div>
    </main>
    <footer class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
